<!DOCTYPE html>
<html>
<head>
	<%= favicon_link_tag 'favicon.ico' %>
	<title>Sparta</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="http://localhost:3000/"> <%= image_tag("small logo.png") %> </a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<% if user_signed_in? %>
				<ul class="nav navbar-nav navbar-right">
					<li><a href="profile"><span class="glyphicon glyphicon-user"></span> Editar usuario</a></li>
					<li> <%= link_to raw('Cerrar sesión <span class="glyphicon glyphicon-off"></span>'), destroy_user_session_path, :method => :delete %></li>
				</ul>
				<% else %>
				<ul class="nav navbar-nav navbar-right" >
					<li><a href="signup">Registrarse</a></li>
					<li><a href="login" >Iniciar sesión</a></li>
				</ul>
				<% end %>
			</div>
		</div>
	</nav>
</head>
<body>
	<% if notice %>
	<p class="notice"><%= notice %></p>
	<% end %>
	<% if alert %>
	<p class="alert"><%= alert %></p>
	<% end %>
	<%= yield %>
</body>
</html>
