<%=render 'layouts/admin'%>
<div class="col-xs-12 col-sm-8">
	<br>
		<h2>Préstamo</h2> <br>
		<%= render 'search' %>
		
		<table style="width: 100%;">
			<tr>
				<th>Nombre</th>
				<th>Fecha</th>
				<th>Monto</th>
				<th>Pendiente</th>
				<th colspan="2">Acciones</th>
			</tr>

			<% @borrowings.each do |borrowing|%>
			<tr>
				<td><%= borrowing.person.name + ' '+ borrowing.person.last_name %></td>
				<td><%= borrowing.created_at %></td>
				<td><%= borrowing.amount %></td>
				<td><%= borrowing.amount - borrowing.paid %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-eye-open fa-2x"></span>'), borrowing_path(borrowing) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-edit fa-2x"></span>'), edit_borrowing_path(borrowing) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-trash fa-2x"></span>'), borrowing_path(borrowing), method: :delete, data: { confirm: '¿Está seguro?'} %></td>
			</tr>
			<% end %>
		</table>
		<br><br>
		<%= link_to 'Nuevo préstamo', new_borrowing_path, {:class=>"btn btn-info"} %>
		<p><%= paginate @borrowings %></p>
</div>