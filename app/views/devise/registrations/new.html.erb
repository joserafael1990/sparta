
<div class="col-sm-offset-4 col-sm-10">
  <div style=" margin-top: 100px">
    <h2>Registro de usuario</h2> <br>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label 'Correo', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Ingrese su correo' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Contrase単a', class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Ingrese contrase単a' %>
          <% if @minimum_password_length %>
          <br />
          <em>Son necesarios al menos <%= @minimum_password_length %> caracteres</em>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Repita la contrase単a', class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Confirme contrase単a' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-10">
          <%= f.submit "Enviar", class: "btn btn-primary btn-lg"  %>
        </div>
      </div>
    </div>
    <% end %>
  </div>