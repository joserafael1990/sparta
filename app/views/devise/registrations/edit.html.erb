 <div class="col-sm-offset-4 col-sm-10">
  <div style=" margin-top: 100px">
    <h2>Editar usuario</h2> <br>
  </div>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label 'Correo', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Ingrese su correo' %>
        </div>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Esperando confirmación por: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label 'Nueva Contraseña', class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Ingrese contraseña' %>
          <% if @minimum_password_length %>
          <br />
          <em>Son necesarios al menos <%= @minimum_password_length %> caracteres</em>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label 'Confirme', class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Introduzca otra vez su nueva contraseña'%>
        </div>
      </div>
      <br>
      <div class="form-group">
       <%= f.label 'Necesitamos comprobar que eres tú antes de procesar los cambios:', class: "col-sm-10"%><br><br>
       <%= f.label 'Contraseña actual', class: "col-sm-2 control-label"%>
       <div class="col-sm-10">
        <%= f.password_field :current_password, autocomplete: "off",  class: "form-control", placeholder: 'Introduzca su contraseña actual'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit "Editar", class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <%= link_to "Atrás", :back %>
    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
      <%= link_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "Se va a borrar su cuenta, ¿ESTA SEGURO?" }, method: :delete %>
    </div>


  </div>

