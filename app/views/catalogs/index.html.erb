<%=render 'layouts/admin'%>
<div class="col-xs-7 col-sm-5">
	<br>
		<h2>Catálogo</h2> <br>
		<%= render 'search' %>

		<table style= "width: 100%;">
			<tr>
				<th>Item</th>
				<th>Categoría</th>
				<th colspan="2">Acciones</th>
			</tr>

			<% @catalogs.each do |catalog|%>
			<tr>
				<td><%=catalog.name %></td>
				<td> <%= catalog.category.name %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-eye-open fa-2x"></span>'), catalog_path(catalog) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-edit fa-2x"></span>'), edit_catalog_path(catalog) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-trash fa-2x"></span>'), catalog_path(catalog), method: :delete, data: { confirm: '¿Está seguro?'} %></td>
			</tr>
			<% end %>
		</table>
		<br><br>
		<%= link_to 'Nuevo artículo', new_catalog_path, {:class=>"btn btn-info"} %>
		<p><%= paginate @catalogs %></p>
	
</div>
<div class="col-xs-5 col-sm-3" id='right_new_item'>
	<%= link_to 'Nuevo artícuño', new_catalog_path, {:class=>"btn btn-info"} %>
</div>