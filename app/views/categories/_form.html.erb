<%=form_for @category do |f|%>
<% if @category.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@category.errors.count, "error") %> No se puede guardar la categoría:
	</h2>
	<ul>
		<% @category.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
	<div class="col-xs-4 col-sm-6">
		<div class="form-horizontal">
			<div class="form-group">
				<%= f.label 'Nombre', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Ingrese el nombre de la categoría' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-10">
					<%= f.submit "Enviar", class: "btn btn-primary btn-lg"  %>
				</div>
			</div>
		</div>
	</div>
</div>

<% end %>