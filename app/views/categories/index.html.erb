<div class="col-xs-7 col-sm-5">
	<br>
		<h2>Categorias</h2> <br>
		<table style="width: 100%;">
			<tr>
				<th>Nombre</th>
				<th colspan="2">Acciones</th>
			</tr>

			<% @categories.each do |category|%>
			<tr>
				<td><%=category.name %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-eye-open fa-2x"></span>'), category_path(category) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-edit fa-2x"></span>'), edit_category_path(category) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-trash fa-2x"></span>'), category_path(category), method: :delete, data: { confirm: '¿Está seguro?'} %></td>
			</tr>
			<% end %>
		</table>
		<br><br>
		<%= link_to 'Nueva categoría', new_category_path, {:class=>"btn btn-info"} %>
		<p><%= paginate @categories %></p>

</div>

<div class="col-xs-5 col-sm-3" id='right_new_item'>
	<%= link_to 'Nueva categoría', new_category_path, {:class=>"btn btn-info"} %>
</div>