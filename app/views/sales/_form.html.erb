<%= form_for @sale  do |f| %>
<% if @sale.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@sale.errors.count, "error") %> No se puede guardar la venta:
	</h2>
	<ul>
		<% @sale.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
	<div class="col-xs-4 col-sm-7">
		<div class="form-horizontal" >
			<div class="form-group">
				<%= f.label 'Cliente ', class: "col-sm-2 control-label", style: "text-align: left;"  %>
				<div class="col-sm-8">
					<%= f.collection_select :client_id, Person.order(:name, :last_name).where(:client => 1) , :id, :name_with_last_name, {prompt: "Seleccione la persona"},  class: "form-control"%>
				</div>
			</div>
			<%= f.text_field :seller_id, :value => Person.where(:email => current_user.email).pluck(:id).first.to_i,  class: "form-control hidden"%>
			<div class="form-group">
				<%= f.label 'Solicitud de factura ', class: "col-sm-2 control-label", style: "text-align: left;"  %>
				<div class="col-sm-8">
					<%= f.select(:bill_request, ['No', 'Pendiente', 'Procesada'], {include_blank: "Seleccione"}, { :class => 'form-control' }) %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-4 col-sm-10">
				<%= f.submit "Enviar", class: "btn btn-primary btn-lg"  %>
			</div>
		</div>
	</div>
</div>
</div>
<% end %>