<%= form_for @city  do |f| %>
<% if @city.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@city.errors.count, "error") %> No se puede guardar el estado:
	</h2>
	<ul>
		<% @city.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
	<div class="col-xs-4 col-sm-6">
		<div class="form-horizontal">
			<div class="form-group">
				<%= f.label 'Estado' %>
				<div class="col-sm-10">
					<%= f.collection_select :state_id, State.order(:name), :id, :name, {prompt: "Seleccione el estado"},  class: "form-control"  %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Nombre' %>
				<div class="col-sm-10">
					<%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Ingrese el nombre de la ciudad' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-10">
					<%= f.submit "Enviar", class: "btn btn-primary btn-lg"  %>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>