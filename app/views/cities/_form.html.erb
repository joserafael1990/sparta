<%= form_for @city  do |f| %>
<% if @city.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@city.errors.count, "error") %> No se puede guardar el estado:
	</h2>
	<ul>
		<% @city.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
	<div class="col-xs-4 col-sm-6">
		<div class="form-horizontal">
			<div class="form-group">
				<%= f.label 'PaÃ­s', class: "col-sm-2 control-label"  %>
				<div class="col-sm-10">
					<%= f.collection_select(:country, Country.order(:name), :id, :name, {include_blank: 'Seleccione un paÃ­s'},  class: "form-control", id: 'country_list' ) %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Estado', class: "col-sm-2 control-label"  %>
				<div class="col-sm-10">
					<%= f.collection_select(:state_id, [], :id, :name, {prompt: "Seleccione el estado"},  class: "form-control" ) %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Nombre',  class: "col-sm-2 control-label" %>
