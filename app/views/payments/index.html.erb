<%=render 'layouts/admin'%>
<div class="col-xs-12 col-sm-8">
	<br>
		<h2>Pagos</h2> <br>
		<%= render 'search' %>
		
		<table style="width: 100%;">
			<tr>
				<th>Nombre</th>
				<th>Fecha</th>
				<th>Monto</th>
				<th colspan="2">Acciones</th>
			</tr>

			<% @payments.each do |payment|%>
			<tr>
				<td><%= payment.person.name + ' '+ payment.person.last_name %></td>
				<td><%= payment.created_at %></td>
				<td><%= payment.amount %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-eye-open fa-2x"></span>'), payment_path(payment) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-edit fa-2x"></span>'), edit_payment_path(payment) %></td>
				<td><%= link_to raw('<span class="glyphicon glyphicon-trash fa-2x"></span>'), payment_path(payment), method: :delete, data: { confirm: '¿Está seguro?'} %></td>
			</tr>
			<% end %>
		</table>
		<br><br>
		<%= link_to 'Nuevo pago', new_payment_path, {:class=>"btn btn-info"} %>
		<p><%= paginate @payments %></p>
</div>