<%=form_for @product do |f|%>
<% if @product.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@product.errors.count, "error") %> No se puede guardar el producto:
	</h2>
	<ul>
		<% @product.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
	<div class="col-xs-4 col-sm-6">
		<div class="form-horizontal">
			<div class="form-group">
				<%= f.label 'Nombre', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Ingrese el nombre del producto' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Precio', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.number_field :price, autofocus: true, class: "form-control", placeholder: 'Ingrese el precio del producto' %>
				</div>
			</div>	
			<div class="form-group">
				<%= f.label 'Descuento mÃ¡ximo', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.number_field :max_discount, autofocus: true, class: "form-control", placeholder: 'Ingrese el porcentaje de descuento' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Costo', class: "col-sm-2 control-label" %>
				<div class="col-sm-10">
					<%= f.number_field :cost, autofocus: true, class: "form-control", placeholder: 'Ingrese el costo del producto' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-10">
					<%= f.submit "Enviar", class: "btn btn-primary btn-lg"  %>
				</div>
			</div>
		</div>
	</div>
</div>

<% end %>